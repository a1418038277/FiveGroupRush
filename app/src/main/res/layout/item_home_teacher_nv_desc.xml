<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_210"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/dp_5">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_8">
        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">
            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:background="@drawable/shape_nv_teach"/>
            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_nv_teach2"
                android:layout_marginLeft="@dimen/dp_8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声乐"
                android:textSize="@dimen/dp_22"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_20"/>
            <ImageView
                android:layout_width="@dimen/dp_275"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@mipmap/teacher_nv"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="声乐教学-免费60讲"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_8"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给你来一段巴赫小步舞曲"
        android:textColor="#858C8C"
        android:layout_marginVertical="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_8"/>

</LinearLayout>