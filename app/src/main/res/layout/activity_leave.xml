<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".leave.LeaveActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dp_21"
            android:textColor="#000000"
            android:text="请假"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在学习"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/dp_26"
        android:layout_marginBottom="@dimen/dp_15"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="钢琴一对一线上直播课"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="刘淑琴老师"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_35"/>

    <com.baoyachi.stepview.HorizontalStepView
        android:id="@+id/step_view_zero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dp_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kc4"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#191616"
            android:text="申请时间"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请选择申请时间"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/down"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/btn_sure"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/kcselector"
        android:text="请假申请"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="规则说明:"
        android:textSize="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.请假次数:每年不能超过XXXXX,XXXXXXXXXXXXX"
        android:textSize="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_20"
        android:text="2.提交后XX分钟内可以取消请假申请."
        android:layout_marginLeft="@dimen/dp_10"/>




</LinearLayout>