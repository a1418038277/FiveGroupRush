<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_top"
        android:orientation="horizontal"
        android:background="@color/style"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小提琴"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:layout_margin="@dimen/sp_20"
            />
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="架子鼓"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:layout_margin="@dimen/sp_20"
            />
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钢琴"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:layout_margin="@dimen/sp_20"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/layout_evaluate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:stateListAnimator="@null"
            app:cardElevation="@dimen/dp_40"
            app:cardCornerRadius="@dimen/dp_15"
            android:layout_gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自元宝老师的点评"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_60"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:id="@+id/iv_arrow"
                android:layout_gravity="right|center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:padding="@dimen/dp_5"
                android:background="@drawable/goods_title_shape"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_20"/>


        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/fd121"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_evaluate"
        android:id="@+id/rl_curriculum"
        app:layout_constraintLeft_toLeftOf="@id/layout_evaluate"
        app:layout_constraintRight_toRightOf="@id/layout_evaluate"
        android:layout_marginTop="@dimen/sp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>