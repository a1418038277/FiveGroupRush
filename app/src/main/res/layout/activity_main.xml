<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="LOGIN"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_yzm"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="验证码登陆"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_pwd"
        app:layout_constraintTop_toBottomOf="@id/btn_login_yzm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="密码登陆"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_our"
        app:layout_constraintTop_toBottomOf="@id/btn_login_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="关于我们"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_all"
        app:layout_constraintTop_toBottomOf="@id/btn_login_our"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="四个首页"/>

</androidx.constraintlayout.widget.ConstraintLayout>