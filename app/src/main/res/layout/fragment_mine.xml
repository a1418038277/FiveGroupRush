<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MineFragment"
    android:orientation="vertical"
    android:background="#EDF6F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/voice"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/voice"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_5"/>
        <RelativeLayout
            android:id="@+id/rl_mine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_mine_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/dp_24"
                android:text="壮壮"
                android:layout_marginTop="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img_mine_set"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/userinfo_set"
                android:layout_toRightOf="@+id/tv_mine_username"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"/>
            <TextView
                android:id="@+id/tv_mine_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/dp_14"
                android:textColor="#BABFBF"
                android:text="185 **** 8990"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/tv_mine_username"/>
            <ImageView
                android:id="@+id/mine_user_icon"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_alignParentRight="true"
                android:background="@mipmap/user_icon"
                />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/shape_mine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_88"
            android:layout_marginHorizontal="@dimen/dp_8">

            <ImageView
                android:id="@+id/img_bi"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@mipmap/bi"
                android:layout_margin="@dimen/dp_15"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:layout_toRightOf="@+id/img_bi"
                android:layout_marginTop="@dimen/dp_14"/>
            <TextView
                android:id="@+id/bi_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_22"
                android:textColor="#fff"
                android:text="666"
                android:layout_below="@id/img_bi"
                android:layout_marginLeft="@dimen/dp_17"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f币"
                android:layout_toRightOf="@id/bi_count"
                android:layout_alignBottom="@id/bi_count"
                android:layout_marginLeft="@dimen/dp_6"/>
            <Button
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:background="@drawable/shape_mine_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_22"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_mine_else"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginVertical="@dimen/dp_22"
            android:layout_height="@dimen/dp_100"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="center"
                    android:background="@mipmap/love"
                    android:layout_marginBottom="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="center"
                    android:background="@mipmap/dingdan"
                    android:layout_marginBottom="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="center"
                    android:background="@mipmap/guanli"
                    android:layout_marginBottom="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程管理"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <include layout="@layout/layout_mine_bootom" />

            <include layout="@layout/layout_mine_bootom" />
            <include layout="@layout/layout_mine_bootom" />
            <include layout="@layout/layout_mine_bootom" />
            <include layout="@layout/layout_mine_bootom" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>