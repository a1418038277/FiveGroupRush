<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp_15"
    app:cardElevation="@dimen/dp_40"
    app:cardMaxElevation="@dimen/dp_40"
    android:layout_height="@dimen/dp_150"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品信息"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="声乐系统课"
        android:id="@+id/tv_goodsName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        />
    <LinearLayout
        android:layout_width="@dimen/dp_5"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_goodsName"
        app:layout_constraintBottom_toBottomOf="@id/tv_goodsName"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@id/tv_goodsName"
        android:background="@drawable/goods_title_shape"
        android:layout_marginRight="@dimen/dp_5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_goodsName"
        app:layout_constraintTop_toBottomOf="@id/tv_goodsName"
        android:layout_marginTop="@dimen/dp_10"
        android:text="订单号"
        android:textColor="@color/black"
        android:id="@+id/tv_number"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_height="1dp"
        android:background="@color/parentActivity"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥299"
        android:textColor="@color/style"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="@id/tv_goodsName"
        app:layout_constraintTop_toBottomOf="@id/linear" />

    <TextView
        android:id="@+id/tv_priceOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="￥599"
        android:textSize="@dimen/sp_8"
        app:layout_constraintBottom_toBottomOf="@id/tv_price"
        app:layout_constraintLeft_toRightOf="@id/tv_price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_20"
        android:text="去支付"
        android:id="@+id/tv_buy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:background="@drawable/goods_btn_shape"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>