<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity"
    android:background="#FBFBFB">

    <TextView
        android:id="@+id/tv_welcome_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="欢迎您的加入"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        android:textColor="#1C1919"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19999996666"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_join"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/dp_18"
        android:textColor="#252727"/>
    <TextView
        android:id="@+id/tv_chain_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国移动提供认证服务"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/dp_11"
        android:textColor="#6C7171"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_chain_mobile"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/shape_login"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:textColor="#F8FBFB"
        android:text="本机号码一键登录"
        android:textSize="@dimen/dp_20"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center_horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_check"/>
        <TextView
            android:id="@+id/tv_chain_mobile_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_11"
            android:text="登陆及代表同意《中国移动认证服务条款》和《用户协议》"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dp_20">
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1.5"
            android:background="#4A4949"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="其他登录方式"
            android:gravity="center_vertical|center_horizontal"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1.5"
            android:background="#4A4949"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/wechat"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/login_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/wechat"/>

</androidx.constraintlayout.widget.ConstraintLayout>