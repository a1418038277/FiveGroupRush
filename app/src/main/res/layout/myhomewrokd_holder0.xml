<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_15"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_10"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        >
        <VideoView
            android:id="@+id/vv_vv"
            android:layout_width="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_100"
            />
        <TextView
            android:id="@+id/txt_practice"
            android:layout_toRightOf="@id/vv_vv"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="节奏练习1"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RatingBar
            android:id="@+id/star"
            android:layout_below="@id/txt_practice"
            android:layout_alignLeft="@id/txt_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:numStars="3"
            />
        <TextView
            android:id="@+id/img_collect"
            android:background="@drawable/collect_select"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"
            />
        <View
            android:id="@+id/line"
            android:layout_below="@id/vv_vv"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1C1C1"
            />
        <TextView
            android:id="@+id/txt_course"
            android:layout_below="@id/line"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="声乐系统课-第一节"
            android:background="@drawable/raduis_shape"
            android:layout_width="wrap_content"
            android:paddingVertical="@dimen/dp_3"
            android:paddingHorizontal="@dimen/dp_4"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_date"
            android:text="9小时前"
            android:layout_below="@id/line"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_see"
            android:text="查看点评"
            android:layout_below="@id/txt_date"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_next"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>