<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".orderform.OrderFormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
           android:layout_gravity="center"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dp_21"
            android:textColor="#000000"
            android:text="订单详情"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/xx"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:textColor="#000000"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:textSize="@dimen/dp_25"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已完成"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textSize="@dimen/dp_20"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单号码:  132456789"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#BDBFBF"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单时间:  2020.12.12  18:00:12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#BDBFBF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F6F6F6"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南先生   13895008787"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="北京市朝阳区朝阳大街朝阳大厦2323"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#6D6D6E"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#F6F6F6"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="订单信息"/>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginLeft="@dimen/dp_10"
       android:layout_marginRight="@dimen/dp_10"
       app:cardCornerRadius="@dimen/sp_8"
       app:cardBackgroundColor="#F6F6F6"
       app:contentPadding="@dimen/dp_10"

       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_10"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_70"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginBottom="@dimen/dp_10"
               android:background="@drawable/jjiao"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="钢琴一对一线陪练课程"
                   android:textSize="@dimen/sp_20"
                   android:layout_marginLeft="@dimen/dp_8"
                   android:textColor="#000000"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="¥ 600 "
                       android:gravity="center"
                       android:layout_weight="3"
                       android:textStyle="bold"
                       android:layout_marginLeft="@dimen/dp_8"
                       android:textColor="#FF8800"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="×1"
                       android:layout_weight="1"
                       android:layout_marginLeft="@dimen/dp_8"
                       android:textColor="#6D6D6E"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="总价"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_13"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥600 "
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="运费"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_13"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥0 "
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="优惠"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_13"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-¥0 "
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:textColor="#FF8800"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单总价"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_13"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥600 "
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:text="查看物流"
        android:id="@+id/btn_look"
        android:layout_gravity="right"
        android:textColor="#717171"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/btn_circle"
        android:layout_marginBottom="@dimen/dp_25"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        />
</LinearLayout>