<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ActivityFragment"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:background="#fff">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:background="@mipmap/jifengmusic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FB754B"
            android:textSize="@dimen/dp_25"
            android:textStyle="italic"
            android:text="季风音乐"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F6EDED"
        android:layout_marginTop="@dimen/dp_5">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/dp_5">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/activity_banner"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新活动"
                android:textStyle="bold"
                android:textSize="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_16"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_165"
            android:orientation="horizontal"
            android:background="#fff"
            android:padding="@dimen/dp_10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_66"
                    android:background="@mipmap/come_on"
                    android:layout_margin="@dimen/dp_10"
                    android:id="@+id/come_on"/>
                <TextView
                    android:id="@+id/piano_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钢琴直播课程"
                    android:textSize="@dimen/dp_18"
                    android:layout_below="@+id/come_on"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/come_on"
                    android:layout_alignParentRight="true"
                    android:text="直播"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/piano_live"
                    android:textSize="@dimen/dp_12"
                    android:text="12月5日晚8点直播，一起参加把！"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginVertical="@dimen/dp_2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_66"
                    android:background="@mipmap/come_on"
                    android:layout_margin="@dimen/dp_10"
                    android:id="@+id/come_on1"/>
                <TextView
                    android:id="@+id/piano_live1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钢琴直播课程"
                    android:textSize="@dimen/dp_18"
                    android:layout_below="@+id/come_on1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/come_on1"
                    android:layout_alignParentRight="true"
                    android:text="直播"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/piano_live1"
                    android:textSize="@dimen/dp_12"
                    android:text="12月5日晚8点直播，一起参加把！"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginVertical="@dimen/dp_2"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新活动"
                android:textStyle="bold"
                android:textSize="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_16"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/dp_6">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_5"
                android:background="#fff">

                <ImageView
                    android:id="@+id/come_on3"
                    android:layout_width="@dimen/dp_146"
                    android:layout_height="@dimen/dp_100"
                    android:layout_margin="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@mipmap/come_on"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/piano_live3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="钢琴直播课程"
                    android:textSize="@dimen/dp_18"
                    android:layout_toRightOf="@id/come_on3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/dp_2"
                    android:layout_toRightOf="@id/piano_live3"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="直播" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/come_on3"
                    android:layout_below="@id/piano_live3"
                    android:textSize="@dimen/dp_12"
                    android:text="12月5日晚8点直播，一起参加把！"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginVertical="@dimen/dp_2"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>