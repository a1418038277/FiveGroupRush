<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.eventdetail.EventDetailActivity">


    <RelativeLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        >
        <ImageView
            android:id="@+id/txt_quxiao"
            android:src="@mipmap/quxiao"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/txt_hot_event"
            android:text="热门活动"
            android:textStyle="bold"
            android:textSize="@dimen/dp_14"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:text="本周六晚8点直播课堂"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/txt_date"
        app:layout_constraintLeft_toLeftOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:text="2020-12-12 16:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img1"
        app:layout_constraintTop_toBottomOf="@id/txt_date"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@mipmap/jinriyinyue"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:paddingHorizontal="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/txt2"
        android:text="《掌握大师级演奏技巧》"
        android:layout_marginTop="@dimen/dp_30"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt3"
        android:text="12月5日20:00马上要开播了"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#C53B2E"
        android:textSize="@dimen/dp_15"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txt4"
        android:text="直接点击或扫描下面的二维码"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_sign"
        android:text="立即报名"
        android:background="@drawable/shape_next"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_width="@dimen/dp_230"
        android:textStyle="bold"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>