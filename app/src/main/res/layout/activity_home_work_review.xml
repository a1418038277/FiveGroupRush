<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homeworkreviews.HomeWorkReviewActivity">

    <RelativeLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        >
        <ImageView
            android:id="@+id/txt_back"
            android:src="@mipmap/back"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/txt_hot_event"
            android:text="作业点评"
            android:textStyle="bold"
            android:textSize="@dimen/dp_14"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        >
        <VideoView
            android:id="@+id/vv_vv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_100"
            />
        <TextView
            android:id="@+id/txt_practice"
            android:layout_toRightOf="@id/vv_vv"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="节奏练习1"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RatingBar
            android:id="@+id/star"
            android:layout_below="@id/txt_practice"
            android:layout_alignLeft="@id/txt_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:numStars="3"
            />
        <TextView
            android:id="@+id/img_collect"
            android:background="@drawable/collect_select"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"
            />
        <TextView
            android:id="@+id/txt_course"
            android:layout_below="@id/vv_vv"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="声乐系统课-第一节"
            android:background="@drawable/raduis_shape"
            android:layout_width="wrap_content"
            android:paddingVertical="@dimen/dp_3"
            android:paddingHorizontal="@dimen/dp_4"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_date"
            android:text="昨天08:23"
            android:layout_below="@id/vv_vv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line"
            android:layout_below="@id/txt_date"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1C1C1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        app:layout_constraintTop_toBottomOf="@id/rl"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/child_name"
            android:text="壮壮"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textStyle="bold"
            android:textSize="@dimen/dp_15"
            android:layout_height="wrap_content"/>
        <VideoView
            android:id="@+id/vv_vv1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@id/child_name"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_100"
            />
        <TextView
            android:id="@+id/txt_time"
            android:text="昨天08:23"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line3"
       app:layout_constraintTop_toBottomOf="@id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#C1C1C1"
        />
    <RelativeLayout
        android:id="@+id/rl3"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/teacher_name"
            android:text="元宝老师"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_time1"
            android:text="昨天08:23"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_tempotraining1"
            android:text="节拍训练"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_below="@id/teacher_name"
            android:background="@drawable/raduis_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_tempotraining2"
            android:text="节拍训练"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignBottom="@id/txt_tempotraining1"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/txt_tempotraining1"
            android:background="@drawable/raduis_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_tempotraining3"
            android:text="节拍训练"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignBottom="@id/txt_tempotraining2"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/txt_tempotraining2"
            android:background="@drawable/raduis_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_tempotraining4"
            android:text="节拍训练"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/txt_tempotraining1"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/raduis_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_review"
            android:text="节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练节拍训练"
            android:textStyle="bold"
            android:layout_below="@id/txt_tempotraining4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>