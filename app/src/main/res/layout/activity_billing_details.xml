<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.billingdetails.BillingDetailsActivity">


    <RelativeLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:background="@color/cardview_light_background"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        >
        <ImageView
            android:id="@+id/txt_quxiao"
            android:src="@mipmap/quxiao"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/txt_hot_event"
            android:text="季风音乐"
            android:textStyle="bold"
            android:textSize="@dimen/dp_14"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_detail"
        android:text="结算详情"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/line"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/txt_detail"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        />
    <RelativeLayout
        android:id="@+id/rl"
        android:background="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        >
        <ImageView
            android:id="@+id/img"
            android:src="@mipmap/detail_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/txt_vocalmusic"
            android:text="声乐系统课"
            android:layout_toRightOf="@id/img"
            android:textSize="@dimen/dp_18"
            android:textColor="#f000"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_price"
            android:text="￥299"
            android:textColor="#f00"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_order"
            android:text="普通订单"
            android:layout_toRightOf="@id/img"
            android:layout_alignBottom="@id/img"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/rl"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        />
    <RelativeLayout
        android:id="@+id/rl2"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        >
        <TextView
            android:id="@+id/txt_shop_price"
            android:text="商品原价"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_original_price"
            android:text="￥299"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_6"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_coupons"
            android:text="商品原价"
            android:textStyle="bold"
            android:layout_below="@id/txt_shop_price"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_no"
            android:text="暂无可用"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:textStyle="bold"
            android:layout_below="@id/txt_original_price"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/right_kuohao"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        >
        <TextView
            android:id="@+id/txt_heji"
            android:text="合计:"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_combined"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="#f00"
            android:text="￥299.00"
            android:layout_toRightOf="@id/txt_heji"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_pay"
            android:text="去支付"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/shape_next"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>